---
layout: baselayout.njk
showHeaderName: true
heroBlurb: "Im the default Hero Blurb"
minHeight: auto
---

{% import "../_includes/partials/hero.njk" as heroMacro %}
{% import "../_includes/partials/post-list.njk" as postMacro %}

{{heroMacro.hero(heading = title, blurb=page.date | readableDate, topics = topics)}}

<div class="site-container">
  <div class="page-body" style="--page-body-min-height:{{minHeight}}">
    <div></div>
    <div class="post-content">
      {{ content | safe }}
    </div>
    {# {{postMacro.postList(postData = collections.post, numberOfPosts=2, page = page) }} #}

    {% set previousPost = collections.post | getPreviousCollectionItem(page) %}
    {% set nextPost = collections.post | getNextCollectionItem(page) %}
    {% if nextPost %}
      <p>
        Next Blog Post: <a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
      </p>
    {% endif %}
    {% if previousPost %}
      <p>
        Previous Blog Post: <a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a>
      </p>
    {% endif %}
  </div>
</div>