{% set css %}
{% include "../style.css" %}
{% endset %}

{% set js %}
{% include "../script.js" %}
{% endset %}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta name={{description}}/>
    <link rel="shortcut icon" href="/img/h-favicon.ico"/>
    <title>{{title}}</title>
    <style>
      {{css | cssmin | safe}}
    </style>
    <title>{{ title }}</title>
  </head>
  <body class="light">
    {% include "paritals/header.njk" %}
    <main>
      {% block content %}{% endblock %}
    </main>
    <footer>
      <p>Connect with me on <a href="https://twitter.com/aharvard">Twitter</a> or <a href="https://www.linkedin.com/in/aharvard/">LinkedIn</a>!</p>
      <p>This website is built with 11ty and hosted on Netlify. <span id="copyright"></span>
    </footer>
    <script>
      {{ js | jsmin | safe }}
    </script>
  </body>

</html>