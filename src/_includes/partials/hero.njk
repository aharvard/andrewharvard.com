{% macro hero(heading = "Heading", blurb = false, class = false, headshot = false) %}
  <div class="hero{{" " + class if class }}">
    {% if headshot %}
      {{headshot | safe}}
    {% endif %}
    <div class="site-container">
      <h1 class="hero__heading">{{heading}}</h1>
      {% if blurb %}
        <div class="hero__blurb">
          {{blurb | safe}}
        </div>
      {% endif %}
    </div>
  </div>
{% endmacro %}