{% macro hero(heading = "Heading", blurb = false, class = false, headshot = false, topics = false) %}
  <div class="hero{{" " + class if class }}">
    {% if headshot %}
      {{headshot | safe}}
    {% endif %}
    <div class="site-container">
      <h1 class="hero__heading">{{heading}}</h1>
      {% if blurb %}
        <div class="hero__blurb">
          {{blurb | safe}}
        </div>
      {% endif %}
      {% if topics %}
        <div class="hero__topics">
          {% for topic in topics %}
            <span class="post__topic">{{topic}}</span>{{"," if topic !== topics[topics.length - 1]}}
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
{% endmacro %}